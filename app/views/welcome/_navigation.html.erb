            <a class="navbar-brand bg-white page-scroll" href="#page-top">Gigku</a>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse bg-white navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#about">About</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#services">How it works</a>
                    </li>
                     <% if user_signed_in? %>
                        <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                        <% else %>
                        <li class="form-inline ">
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                              <div class="form-group form-group-sm">
                                <%= f.label :email, class:'sr-only' %>
                                <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: 'Your Email address' %>
                              </div>

                              <div class="form-group form-group-sm">
                                <%= f.label :password, class:'sr-only' %>
                                <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder: 'password' %>
                              </div>
                              <%= f.submit "Log in", class:'btn btn-primary' %><br>
                              <% if devise_mapping.rememberable? -%>
                                <div class="checkbox">
                                  <%= f.check_box :remember_me %>
                                  <%= f.label :remember_me %>
                                </div>
                              <% end -%>
                            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                            <% end %>
                        </li>
                    <% end %>
